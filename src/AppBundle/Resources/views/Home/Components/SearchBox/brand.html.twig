<h3>{{ 'brand'|trans }}</h3>
<div class="dropdown category-dropdown" id="dropdown-brand">
    <a data-toggle="dropdown" href="#" aria-expanded="false">
        <span class="change-text" id="dropdown-current-brand-text" data-value="">{{ 'select'|trans }}</span>
        <i class="glyphicon glyphicon-chevron-down dropdown-icon"></i>
    </a>
    <ul class="dropdown-menu category-change">
        {% for brand in brands %}
            <li class="dropdown-item" id="dropdown-brand-item" data-value="{{ brand.brandId }}" data-name="{{ brand.title }}"><a href="#">{{ brand.title }}</a></li>
        {% endfor %}
    </ul>
</div>
