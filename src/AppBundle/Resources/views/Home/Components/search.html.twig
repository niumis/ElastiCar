<section class="home-banner">
    <div class="banner-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="car-info">
                    <h1>{{  'Sužinok pirmas!'|trans }}</h1>
                    <h2>{{ 'Rask'|trans }} <span>{{ 'geriausią automobilį'|trans }}</span></h2>
                    <p>{{  'Pasirodžius naujam Jus dominančio automobilio skelbimui, būsite informuotas el. paštu vos per 5 minutes!'|trans }}</p>
                    <a href="#" class="btn btn-primary">{{ 'Kaip tai veikia?'|trans }}</a>
                </div>
            </div>
            <div class="col-sm-4 col-sm-offset-2">
                <div class="contact-form">
                    <h1>{{ 'Raskite automobilį'|trans }}</h1>
                    <div class="contact-info">
                        <form action="#">
                            <h3>{{ 'Markė'|trans }}</h3>
                            <div class="dropdown category-dropdown" id="dropdown-brand">
                                <a data-toggle="dropdown" href="#" aria-expanded="false">
                                    <span class="change-text" id="dropdown-current-brand-text" data-value="">{{ 'Pasirinkite'|trans }}</span>
                                    <i class="glyphicon glyphicon-chevron-down dropdown-icon"></i>
                                </a>
                                <ul class="dropdown-menu category-change">
                                    {% for brand in brands %}
                                        <li class="dropdown-item" id="dropdown-brand-item" data-value="{{ brand.brandId }}" data-name="{{ brand.title }}"><a href="#">{{ brand.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                            <h3>{{ 'Modelis'|trans }}</h3>
                            <div class="dropdown category-dropdown" id="dropdown-model">
                                <a data-toggle="dropdown" href="#" aria-expanded="false">
                                    <span class="change-text" id="dropdown-current-model-text" data-value="">{{ 'Pasirinkite'|trans }}</span>
                                    <i class="glyphicon glyphicon-chevron-down dropdown-icon"></i>
                                </a>
                                <ul class="dropdown-menu category-change" id="dropdown-model-ul">

                                </ul>
                            </div>
                            <h3>{{ 'Šalis'|trans }}</h3>
                            <div class="dropdown category-dropdown">
                                <a data-toggle="dropdown" href="#" aria-expanded="false">
                                    <span class="change-text">Lietuva</span>
                                    <i class="glyphicon glyphicon-chevron-down dropdown-icon"></i>
                                </a>
                                <ul class="dropdown-menu category-change">
                                    <li><a href="#">Lietuva</a></li>
                                </ul>
                            </div>
                            <button type="submit" class="form-control" id="search-submit" value="{{ 'Toliau'|trans }}">{{ 'Toliau'|trans }}</button>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- row -->
    </div><!-- container -->
</section>
