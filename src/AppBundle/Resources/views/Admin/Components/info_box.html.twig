<div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
        {# Apply any bg-* class to to the icon to color it #}
        <span class="info-box-icon {{ bg_class|default("bg-red") }}"><i class="fa {{ icon|default("fa-star-o") }}"></i></span>
        <div class="info-box-content">
            <span class="info-box-text">{{ (title|default("Likes"))|trans }}</span>
            <span class="info-box-number">
                {{ (content|default("00000"))|trans }}
            </span>
        </div>{#  /.info-box-content #}
    </div>{#  /.info-box #}
</div>