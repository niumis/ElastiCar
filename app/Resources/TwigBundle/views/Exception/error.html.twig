{% extends 'base.html.twig' %}

{% block body %}

    {% include '@App/Home/Components/navbar.html.twig' %}

    <section class="clearfix text-center">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="found-section section">
                        <h1>{{ status_code }}</h1>
                        <h2>{{ status_text | trans }}</h2>
                        <p>{{ 'Kažkas negerai. Klaida artimiausiu metu bus pataisyta. Atsiprašome.' | trans }}</p>
                        <a href="{{ path('homepage') }}"
                           class="btn btn-primary">{{ 'Grįžti į praeitą puslapį' | trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="page">
        <div class="container" id="content">
            {% include '@App/Home/Components/description.html.twig' %}
        </div>
    </div>


    <footer id="footer" class="clearfix">
        {% include '@App/Home/Components/footer.html.twig' %}
    </footer>

{% endblock %}
